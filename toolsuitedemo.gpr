project Toolsuitedemo is

   for Source_Dirs use ("src");
   for Object_Dir use "obj";
   for Main use ("main.adb");
   for Languages use ("Ada", "C");

   package Pretty_Printer is
      for Default_Switches ("ada") use ("--enum-upper-case");
   end Pretty_Printer;

   package Compiler is
      for Switches ("ada") use ("-fcallgraph-info=su,da");
   end Compiler;

end Toolsuitedemo;

